                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListView">
                                        <ScrollViewer>
                                            <Border BorderThickness="0,0,0,0.5" BorderBrush="Black">
                                                <ItemsPresenter/>
                                            </Border>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Style>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter/>
                                            <Border.ToolTip>
                                                <ToolTip Style="{StaticResource ToolTipEducationInfo}"/>
                                            </Border.ToolTip>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="WhiteSmoke"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding TypeEducation}" FontSize="13" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="/Common/Resources/Images/changeDocument.png" Style="{StaticResource ButtonImage}"
                                        HorizontalAlignment="Right" Margin="0,0,5,0" Height="24" Width="24"
                                        Command="{Binding DataContext.ChangeEducationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"/>
                                <Button Grid.Column="2" Content="/Common/Resources/Images/deleteDocument.png" Style="{StaticResource ButtonImage}" 
                                        Margin="5,0" Height="24" Width="24"
                                        Command="{Binding DataContext.DeleteEducationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock Grid.Row="3" Text="{Binding Educations.Count, StringFormat='Количество образований: {0}'}" Margin="10,3,0,0" FontSize="13"/>
                
                <Button Grid.Row="4" Content="Добавить ЕГЭ" Style="{StaticResource defaultAdd}" Margin="10,10,0,0" HorizontalAlignment="Left"
                        Command="{Binding AddEGECommand}"/>
                <ListView Grid.Row="5" Margin="10,5,100,0" MaxHeight="100" ItemsSource="{Binding EGES}">
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListView">
                                        <ScrollViewer>
                                            <Border BorderThickness="0,0,0,0.5" BorderBrush="Black">
                                                <ItemsPresenter/>
                                            </Border>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Style>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="WhiteSmoke"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Предмет:" FontSize="13" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding AcademicSubject}" FontSize="13" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="Балл:" FontSize="13" Margin="10,0,0,0" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="{Binding SubjectScores}" FontSize="13" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                <Button Grid.Column="4" Content="/Common/Resources/Images/deleteDocument.png" Style="{StaticResource ButtonImage}" 
                                        Margin="5,0" Height="24" Width="24"
                                        Command="{Binding DataContext.DeleteEGECommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock Grid.Row="6" Text="{Binding ApplicantVM.TotalPoints, StringFormat='Общий балл ЕГЭ: {0}'}" Margin="10,3,0,0" FontSize="13"/>
            </Grid>

            <!--ОТЛИЧИТЕЛЬНЫЕ ПРИЗНАКИ-->
            <Grid Grid.Row="5" Margin="10,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="15" Text="Отличительные признаки" Foreground="Gray" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <Button Grid.Row="1" Content="Добавить признак" Style="{StaticResource defaultAdd}" Margin="10,10,0,0" HorizontalAlignment="Left"
                        Command="{Binding .}"/>
                <ListView Grid.Row="2" Margin="10,5,100,0" Height="160" ItemsSource="{Binding .}"/>

            </Grid>

            <!--НАПРАВЛЕНИЯ-->
            <Grid Grid.Row="6" Margin="10,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="15" Text="Направления подготовки" Foreground="Gray" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <Button Grid.Row="1" Content="Добавить направление" Style="{StaticResource defaultAdd}" Margin="10,10,0,0" HorizontalAlignment="Left"
                        Command="{Binding .}"/>
                <ListView Grid.Row="2" Margin="10,5,100,0" Height="160" ItemsSource="{Binding .}"/>
                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <TextBlock Text="Выбрано основное направление подготовки:" Margin="10,5,10,0" FontSize="14"/>
                    <TextBlock Text="{Binding .}" Margin="0,5,10,0" FontSize="14" TextWrapping="Wrap" Width="660"/>
                </StackPanel>
            </Grid>

            <!--ПОДАННЫЕ ДОКУМЕНТЫ-->
            <Grid Grid.Row="7" Margin="10,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="15" Text="Поданные документы" Foreground="Gray" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <Button Grid.Row="1" Content="Добавить документ" Style="{StaticResource defaultAdd}" Margin="10,10,0,0" HorizontalAlignment="Left"
                        Command="{Binding .}"/>
                <ListView Grid.Row="2" Margin="10,5,100,0" Height="160" ItemsSource="{Binding .}"/>
            </Grid>

            <!--КНОПКА СФОРМИРОВАТЬ ЛИЧНОЕ ДЕЛО-->
            <Button Grid.Row="8" Content="Сформировать личное дело" Style="{StaticResource defaultAdd}" HorizontalAlignment="Center" Margin="0,20"
                    Command="{Binding CreatePersonalFileCommand}"/>

        </Grid>
        
    </ScrollViewer>

</UserControl>