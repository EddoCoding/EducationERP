<Window x:Class="EducationERP.Modules.Components.Notification.View.Note"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationERP.Modules.Components.Notification.View"
        mc:Ignorable="d" Title="Уведомление" Height="115" Width="600" MouseDown="MoveWindow"
        Background="WhiteSmoke" FontFamily="Calibri" WindowStyle="None" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>

        <TextBlock Text="{Binding TextNote}" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   FontSize="17" Margin="10,0" TextWrapping="Wrap"/>

        <Grid Grid.Row="1" Background="White" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
            <Grid.Effect>
                <DropShadowEffect Opacity="0.3" ShadowDepth="2" BlurRadius="10" />
            </Grid.Effect>

            <Button Content="Понятно" Style="{StaticResource defaultButton}" FontSize="18" Margin="3" Command="{Binding ExitCommand}"/>

        </Grid>
        
    </Grid>

</Window>